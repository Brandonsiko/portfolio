@model Dashboard.Models.Operation
@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>

<h4>Operation Procedure for Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient" class="control-label"></label>
                <input asp-for="Patient" class="form-control" />
                <span asp-validation-for="Patient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperationType" class="control-label"></label>
                <input asp-for="OperationType" class="form-control" />
                <span asp-validation-for="OperationType" class="text-danger"></span>
            </div>
       
            <div>
                <label class="control-label">Linen Item</label>
                @Html.DropDownList("NAMES",ViewBag.Names,"select name",new {@class="form-control"} )
            </div>
            <div class="form-group">
                <label class="control-label">Select Unit Amount</label>
                <input type="number" max=900 class="form-control" />
            </div>
     

            <div class="form-group">
                <label asp-for="Booked" class="control-label"></label>
                <input asp-for="Booked" class="form-control" />
                <span asp-validation-for="Booked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoctorName" class="control-label"></label>
                <input asp-for="DoctorName" class="form-control" />
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
