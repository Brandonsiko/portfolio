@model IEnumerable<Dashboard.Models.InventoryItems>

@{
    ViewData["Title"] = "ShowFilteredResults";
    
}

<h1>Results</h1>

<div>
    <h4>Inventory Items</h4>
    <hr />

    @if (Model.Count() >0 )
    {



        <dl class="row">
            <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().amount)
        </dd>
        </dl>
    }
    else
    {
        <div>
        <h4>@ViewBag.Message</h4>
        </div>
    }
</div>
<div>
   
    <a asp-action="Index">Back to List</a>
</div>
